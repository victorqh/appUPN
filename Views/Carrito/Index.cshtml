@{
    ViewData["Title"] = "Mi Carrito";
}

<div class="container">
    <h1 class="my-4">üõí Mi Carrito de Compras</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.CantidadItems == 0)
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="display-1">üõí</i>
            </div>
            <h3>Tu carrito est√° vac√≠o</h3>
            <p class="text-muted">Agrega productos para comenzar tu compra</p>
            <a asp-controller="Productos" asp-action="Index" class="btn btn-primary mt-3">
                Ver Productos
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Productos (@ViewBag.CantidadItems items)</h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in ViewBag.Items)
                        {
                            <div class="row align-items-center border-bottom p-3">
                                <div class="col-md-2">
                                    <img src="@(item.Producto?.ImagenUrl ?? "https://placehold.co/100x100")" 
                                         class="img-fluid rounded" 
                                         alt="@item.Producto?.Nombre">
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.Producto?.Nombre</h6>
                                    <small class="text-muted">@item.Producto?.Categoria?.Nombre</small>
                                </div>
                                <div class="col-md-2 text-center">
                                    <strong class="text-success">S/ @item.Precio.ToString("N2")</strong>
                                </div>
                                <div class="col-md-2">
                                    <form asp-action="ActualizarCantidad" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="itemId" value="@item.CarritoItemId" />
                                        <input type="number" name="cantidad" value="@item.Cantidad" 
                                               min="1" max="@item.Producto?.Stock" 
                                               class="form-control form-control-sm"
                                               onchange="this.form.submit()">
                                    </form>
                                </div>
                                <div class="col-md-2 text-end">
                                    <div class="mb-2">
                                        <strong>S/ @((item.Precio * item.Cantidad).ToString("N2"))</strong>
                                    </div>
                                    <form asp-action="Eliminar" method="post" class="d-inline">
                                        <input type="hidden" name="itemId" value="@item.CarritoItemId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('¬øEliminar este producto?')">
                                            üóëÔ∏è
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-secondary">
                    ‚Üê Seguir Comprando
                </a>
            </div>

            <div class="col-md-4">
                <div class="card sticky-top" style="top: 90px;">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Resumen de Compra</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@ViewBag.CantidadItems items):</span>
                            <strong>S/ @ViewBag.Total.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Env√≠o:</span>
                            <strong class="text-success">Gratis</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong class="text-primary fs-4">S/ @ViewBag.Total.ToString("N2")</strong>
                        </div>
                        <button class="btn btn-success btn-lg w-100 mb-2">
                            Proceder al Pago
                        </button>
                        <small class="text-muted d-block text-center">
                            Pago seguro y protegido
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
