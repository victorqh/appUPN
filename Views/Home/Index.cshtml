@model IEnumerable<appUPN.Models.Producto>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="text-center py-5 bg-light rounded mb-5">
    <h1 class="display-4 fw-bold">Bienvenido a appUPN</h1>
    <p class="lead">Encuentra los mejores productos de tecnología al mejor precio</p>
    <a asp-controller="Productos" asp-action="Index" class="btn btn-primary btn-lg mt-3">
        Ver Catálogo Completo
    </a>
</div>

<!-- Ofertas Destacadas -->
<div class="container mb-5">
    <h2 class="mb-4 text-center">🔥 Ofertas Destacadas</h2>
    
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">¡Oferta!</span>
                        <img src="@(producto.ImagenUrl ?? "https://placehold.co/300x200/EEE/999?text=Sin+Imagen")" 
                             class="card-img-top" 
                             alt="@producto.Nombre"
                             style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="text-muted small">@producto.Categoria?.Nombre</p>
                            <p class="card-text">
                                @if (producto.PrecioAnterior.HasValue && producto.PrecioAnterior > producto.Precio)
                                {
                                    <span class="text-decoration-line-through text-muted">S/ @producto.PrecioAnterior.Value.ToString("N2")</span>
                                    <br />
                                }
                                <strong class="fs-4 text-success">S/ @producto.Precio.ToString("N2")</strong>
                            </p>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <a asp-controller="Productos" asp-action="Detalle" asp-route-id="@producto.ProductoId" 
                               class="btn btn-primary w-100">
                                Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <a asp-controller="Productos" asp-action="Ofertas" class="btn btn-outline-danger btn-lg">
                Ver Todas las Ofertas
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No hay ofertas disponibles en este momento.
        </div>
    }
</div>

<!-- Categorías -->
<div class="container mb-5">
    <h2 class="mb-4 text-center">Categorías Populares</h2>
    <div class="row text-center">
        <div class="col-md-3 mb-3">
            <a asp-controller="Productos" asp-action="Index" asp-route-categoriaId="1" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">💻 Laptops</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Productos" asp-action="Index" asp-route-categoriaId="2" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">📱 Smartphones</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Productos" asp-action="Index" asp-route-categoriaId="7" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">🎮 Gaming</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Productos" asp-action="Index" asp-route-categoriaId="6" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">🎧 Audio</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
